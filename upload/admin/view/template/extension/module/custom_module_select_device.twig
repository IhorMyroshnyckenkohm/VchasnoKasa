<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<div class="modal show" id="customModal" tabindex="0" aria-labelledby="customModalLabel" aria-hidden="false" style="display: block;">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="index.php?route=extension/module/custom_module/device_save&user_token={{ user_token }}" method="post">
                <div class="modal-body">
                    <label for="deviceSelect">{{tr_select_devise}}:</label>
                    <select class="form-select" id="deviceSelect" name="device_id">
                        {% for device in devices %}
                            <option value="{{ device.id }}">{{ device.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="saveDevice">{{ tr_save }}</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .modal.show {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 1050;
    }
    .modal-backdrop {
        display: none;
    }
</style>
